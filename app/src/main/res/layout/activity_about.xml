<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.project.mobilecomputing.weathernow.AboutActivity"
    android:background="#16A7CE">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:id="@+id/aboutus"
        android:background="@drawable/aboutuslogo"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/linearLayout"
        android:layout_marginBottom="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="CSE 535 - Mobile Computing"
        android:id="@+id/textView9"
        android:textColor="#ffffff"
        android:typeface="serif"
        android:layout_below="@+id/textView13"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Group 10"
        android:id="@+id/textView10"
        android:textColor="#ffffff"
        android:typeface="serif"
        android:layout_below="@+id/textView9"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="58dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Rohit Iyengar"
        android:id="@+id/textView11"
        android:textColor="#ffffff"
        android:typeface="serif"
        android:layout_below="@+id/textView10"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Kannan Haridas"
        android:id="@+id/textView12"
        android:textColor="#ffffff"
        android:typeface="serif"
        android:layout_below="@+id/textView11"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="200dp"
        android:layout_height="2dp"
        android:background="#ffffff"
        android:id="@+id/linearLayout"
        android:layout_below="@+id/textView12"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"></LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="WeatherNow"
        android:id="@+id/textView13"
        android:textSize="15pt"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:typeface="serif"
        android:layout_below="@+id/aboutus"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
