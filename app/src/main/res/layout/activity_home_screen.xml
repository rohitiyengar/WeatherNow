<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.project.mobilecomputing.weathernow.HomeScreen"
    android:background="#16A7CE">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/weather_now"
        android:id="@+id/lblLogo"
        android:autoText="true"
        android:textColor="#ffffff"
        android:typeface="serif"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="15pt"
        android:layout_marginTop="30dp" />

    <ImageView
        android:layout_width="30pt"
        android:layout_height="30pt"
        android:id="@+id/weatherImageView"
        android:background="@drawable/sunicon"
        android:layout_below="@+id/lblLogo"
        android:layout_alignParentStart="true"
        android:layout_marginStart="37dp"
        android:layout_marginTop="45dp" />

    <ImageView
        android:layout_width="30pt"
        android:layout_height="30pt"
        android:id="@+id/gpsImageView"
        android:background="@drawable/locationicon"
        android:layout_alignTop="@+id/weatherImageView"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="41dp" />

    <ImageView
        android:layout_width="30pt"
        android:layout_height="30pt"
        android:id="@+id/mapImageView"
        android:background="@drawable/mapicon"
        android:layout_above="@+id/lblHistory"
        android:layout_alignStart="@+id/weatherImageView" />

    <ImageView
        android:layout_width="30pt"
        android:layout_height="30pt"
        android:id="@+id/historyImageView"
        android:background="@drawable/historyicon"
        android:layout_below="@+id/lblGps"
        android:layout_alignStart="@+id/gpsImageView"
        android:layout_marginTop="56dp" />

    <ImageView
        android:layout_width="30pt"
        android:layout_height="30pt"
        android:id="@+id/favImageView"
        android:background="@drawable/favicon"
        android:layout_below="@+id/mapImageView"
        android:layout_alignStart="@+id/mapImageView"
        android:layout_marginTop="70dp" />

    <ImageView
        android:layout_width="30pt"
        android:layout_height="30pt"
        android:id="@+id/aboutImageView"
        android:background="@drawable/aboutusicon"
        android:layout_alignTop="@+id/favImageView"
        android:layout_alignEnd="@+id/historyImageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Weather"
        android:id="@+id/lblWeather"
        android:textColor="#ffffff"
        android:textColorHighlight="#9fe2f2"
        android:layout_marginLeft="30dp"
        android:layout_alignTop="@+id/lblGps"
        android:layout_alignEnd="@+id/lblFav" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="GPS"
        android:id="@+id/lblGps"
        android:textColor="#ffffff"
        android:textColorHighlight="#9fe2f2"
        android:layout_below="@+id/gpsImageView"
        android:layout_alignStart="@+id/lblAbout"
        android:paddingLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Map"
        android:id="@+id/lblMap"
        android:textColor="#ffffff"
        android:textColorHighlight="#9fe2f2"
        android:layout_below="@+id/mapImageView"
        android:layout_alignStart="@+id/lblWeather"
        android:paddingLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="History"
        android:id="@+id/lblHistory"
        android:textColor="#ffffff"
        android:textColorHighlight="#9fe2f2"
        android:paddingLeft="10dp"
        android:layout_below="@+id/historyImageView"
        android:layout_alignStart="@+id/historyImageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Favorites"
        android:id="@+id/lblFav"
        android:textColor="#ffffff"
        android:textColorHighlight="#9fe2f2"
        android:layout_below="@+id/favImageView"
        android:layout_alignStart="@+id/favImageView"
        android:paddingLeft="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="About Us"
        android:id="@+id/lblAbout"
        android:textColor="#ffffff"
        android:textColorHighlight="#9fe2f2"
        android:layout_alignTop="@+id/lblFav"
        android:layout_alignEnd="@+id/aboutImageView" />
</RelativeLayout>
